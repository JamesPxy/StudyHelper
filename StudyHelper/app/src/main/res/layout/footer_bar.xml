<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="#F8F8F8"
              android:layout_height="80dp">
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_index"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:button="@null"
            android:background="@drawable/rb_home_selector"
            android:layout_gravity="center_vertical"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:checked="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_msg"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:button="@null"
            android:background="@drawable/rb_msg_selector"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_search"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:background="@drawable/rb_search_selector"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:background="@drawable/rb_user_selector"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </RadioGroup>

</LinearLayout>
